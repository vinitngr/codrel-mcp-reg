{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],
    "lib": ["esnext"],

    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
